<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>taskMaker</title>
  <script crossorigin src="https://unpkg.com/react@17/umd/react.development.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  <link rel="shortcut icon" href="/assets/img/favicon.png" />
  <link rel="stylesheet" type="text/css" href="/assets/main.css" />
</head>

<body>






  <section class="container">

    <div class="taskboard-heading">
      <strong class="taskboard-heading-text is-size-2 has-text-centered">Task Board</strong>
    </div>

    <section id="makeTask">
    </section>


    <div class="taskboard">
      <div id="toDo" class="taskboard-block is-size-3 has-text-centered" ondrop="drop(event)"
        ondragover="allowDrop(event)">
      </div>
      <div id="inProgress" class="taskboard-block is-size-3 has-text-centered" ondrop="drop(event)"
        ondragover="allowDrop(event)">
      </div>
      <div id="done" class="taskboard-block is-size-3 has-text-centered" ondrop="drop(event)"
        ondragover="allowDrop(event)">
      </div>

      <div id="innerNav">
        <div class="btnLink">
          <nav><a href="/login" class="is-size-3 has-text-centered"></a>
            <div class="navlink"><a href="/logout" class="is-size-3 has-text-centered">Log out</a></div>
          </nav>
        </div>
        <div class="btnLink">
          <div class="navlink"><a id="changeBoard" href="/boards" class="is-size-3 has-text-centered">Change Board</a>
          </div>
        </div>
      </div>


    </div id="dannyDevito">
    <div id="garbage" class="garbageBin is-size-3 has-text-centered" ondrop="drop(event)" ondragover="allowDrop(event)">
      <img id="garbageBin" src="assets/img/trashCan.svg" alt="trashcan" width="200" height="250">
    </div>


  </section>

  <section id="burnerDivHome">
    <div id="burnerDiv" draggable="true" ondragstart="drag(event)" ondrop="return false;"></div>
    <div id="burnerDivCopy" draggable="true" ondragstart="drag(event)" ondrop="return false;"></div>
    <div id="burnerDivCopy" draggable="true" ondragstart="drag(event)" ondrop="return false;"></div>
  </section>

  <div id="taskMessage" class='hidden'>
    <h3><span id="errorMessage"></span></h3>
  </div>



  <script src="/assets/appBundle.js"></script>
  <script src="/assets/client.js"></script>

</body>

</html>